{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 300,
    "height": 300,
    "mark": {"type": "arc", "innerRadius": 100},
    "data": {"url": "https://raw.githubusercontent.com/hxuanc/FIT3179/main/DataVis2/data/World_Wide-Unicorn-Company-List-donutindustry.csv"},
    "params" : [{
        "name" : "industry_highlight",
        "select" : {"type" : "point", "fields": ["Industry"]},
        "bind" : "legend"
        }],
    "encoding": {
      "theta": {
        "field": "Count",
        "type": "quantitative",
        "scale": {
          "type": "linear"
        }
      },
      "color": {            
        "condition" : {
        "param": "industry_highlight" ,
        "field":"Industry",
        "type":"nominal",
        "scale": {"scheme":"tableau20"}
    },
    "value" :"lightgrey"},
    "tooltip" : [
        {"field": "Industry", "type": "nominal"},
        {"field": "Count", "type": "quantitative"}
    ]
  },
  "config": {"view": {"stroke": null}}
}