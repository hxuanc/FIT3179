{ "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 400,
  "height": 600,
  "padding": 5,

  "signals": [
    {
      "name": "method",
      "value": "squarify",
      "bind": {
        "input": "select",
        "options": [
          "squarify",
          "binary"
        ]
      }
    },
    {
      "name": "ratio",
      "value": 1.6108,
      "bind": { "input": "range", "min": 0.2, "max": 5, "step": 0.1 }
    }
  ],

  "data": [
    {
      "name": "gapminder",
      "url":
        "https://raw.githubusercontent.com/hxuanc/FIT3179/main/DataVis2/data/World_Wide_Unicorn-Company-List-treemap.csv",
      "format": { "type": "csv" },
      "transform": [
        { "type": "nest", "keys": ["Industry", "Company"] },
        {
          "type": "treemap",
          "field": "Valuation ($B)",
          "method": { "signal": "method" },
          "ratio": { "signal": "ratio" },
          "paddingInner": 1,
          "size": [{ "signal": "width" }, { "signal": "height" }]
          
        }
      ]
    },
    {
        "name": "nodes",
        "source": "gapminder",
        "transform": [{ "type": "filter", "expr": "datum.children" }]
      },
      {
        "name": "leaves",
        "source": "gapminder",
        "transform": [{ "type": "filter", "expr": "!datum.children" }]
      }  
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "gapminder", "field": "Industry" },
      "range": { "scheme": "tableau20"}
    },{
        "name": "size",
        "type": "ordinal",
        "domain": [0, 1, 2, 3],
        "range": [256, 28, 20, 14]
      },
      {
        "name": "opacity",
        "type": "ordinal",
        "domain": [0, 1, 2, 3],
        "range": [0.15, 0.5, 0.8, 1.0]
      }
  ],

  "marks": [
    {
      "type": "rect",
      "from": { "data": "gapminder" },
      "encode": {
        "update": {
          "fill": { "scale": "color", "field": "Industry", "opacity": 0.3 },
          "x": { "field": "x0" },
          "x2": { "field": "x1" },
          "y": { "field": "y0" },
          "y2": { "field": "y1" },
          "fillOpacity" : {"value" : 0.6}

        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "leaves"},
      "encode": {
        "enter": {
          "stroke": {"value": "#fff"},
          "strokeWidth": {"value": 0.2}
        },
        "update": {
          "x": {"field": "x0"},
          "y": {"field": "y0"},
          "x2": {"field": "x1"},
          "y2": {"field": "y1"},
          "fill": {"value": "transparent"},
          "tooltip":{"signal": "{\"Industry\": datum.Industry, \"Company\": datum.Company, \"Valuation or Total Valuation ($B)\":datum['Valuation ($B)']}"}
        },
        "hover": {
          "fill": {"scale": "color", "field": "Industry"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "leaves"},
      "interactive": false,
      "encode": {
        "enter": {
          "font": {"value": "Arial"},
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "fill": {"value": "#000"},
          "text": {"field": "Industry"},
          "fontSize": {"value": 12},
          "fillOpacity": {"value": 0}
        },
        "update": {
          "x": {"signal": "0.5 * (datum.x0 + datum.x1)"},
          "y": {"signal": "0.5 * (datum.y0 + datum.y1)"}
        }
      }
    }
  ]
}
